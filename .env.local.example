# Site Configuration
NEXT_PUBLIC_SITE_NAME=The Travel Place
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_DESCRIPTION=Your one-stop travel booking platform for flights, hotels, car rentals, and visa assistance

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=travelplace_token
NEXT_PUBLIC_REFRESH_TOKEN_NAME=travelplace_refresh_token

# Paystack
# Get your keys from https://dashboard.paystack.com/#/settings/developer
# Use test keys (pk_test_...) for development
# Use live keys (pk_live_...) for production
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_test_public_key_here

# Google OAuth (Optional)
# Get from https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# Google Analytics (Optional)
# Get from https://analytics.google.com/
NEXT_PUBLIC_GA_TRACKING_ID=

# Environment
NEXT_PUBLIC_ENV=development
